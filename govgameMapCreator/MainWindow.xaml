<Window x:Class="govgameMapCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:govgameMapCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="MapImage" HorizontalAlignment="Left" Height="414" Margin="10,10,0,0" VerticalAlignment="Top" Width="414" Stretch="Fill"/>
        <Button x:Name="GenerateButton" Content="Generate" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="356" Click="GenerateButton_Click"/>
        <Button x:Name="AddLayerButton" Content="Add layer" HorizontalAlignment="Right" Margin="0,0,10,40" VerticalAlignment="Bottom" Width="356" Click="AddLayerButton_Click"/>
        <Label x:Name="LayersLabel" Content="Layers" HorizontalContentAlignment="Center" FontSize="15" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="356"/>
        <ListBox x:Name="LayersListBox" Margin="434,45,10,108">
            
        </ListBox>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,70" VerticalAlignment="Bottom" Width="356" Click="SaveButton_Click"/>

    </Grid>
</Window>
